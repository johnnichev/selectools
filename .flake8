[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501, E402, D100, D101, D102, D103, D107, D200, D202, D400, D401, F401, F841, F541, B011, B023
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    venv
per-file-ignores =
    __init__.py:F401
    examples/*.py:D
    tests/*.py:D
    scripts/*.py:D
